export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PATH:$HOME/.pyenv/bin"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"
alias workon="pyenv activate"
alias lsvirtualenv="pyenv virtualenvs"
alias mkvirtualenv="pyenv virtualenv $PYTHON_VERSION"
alias python="$HOME/.pyenv/versions/$VENV_NAME/bin/python"
echo "DEACTIVATE VIRTUALENV COMMAND: . deactivate"
echo "ACTIVATE VIRTUALENV COMMAND: workon $VENV_NAME"
